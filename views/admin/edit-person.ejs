<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-person<% } else { %>add-person<% } %>" method="POST">
            <div class="form-control">
                <label for="Name">Name</label>
                <input type="text" name="Name" id="Name" value="<% if (editing) { %><%= person.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="Address">Address</label>
                <input type="text" name="Address" id="Address" value="<% if (editing) { %><%= person.address %><% } %>">
            </div>
            <div class="form-control">
                <label for="Sector">Sector</label>
                <input type="text" name="Sector" id="Sector" value="<% if (editing) { %><%= person.sector %><% } %>">
            </div>
            <div class="form-control">
                <label for="Vaccine">Vaccine Name</label>
                <select id="Vaccine" name="Vaccine">
                    <option value="covishield" <% if (editing && person.vaccine == "covishield") { %><%= selected="selected" %><% } %>>Covishield</option>
                    <option value="covaxin" <% if (editing && person.vaccine == "covaxin")  { %><%= selected="selected" %><% } %>>Covaxin</option>
                </select>
            </div>
            <div class="form-control">
                <label for="Dose">Dose</label>
                <input type="number" name="Dose" id="Dose" value="<% if (editing) { %><%= person.dose %><% } %>">
            </div>
            <div class="form-control">
                <label for="Date">Vaccine Date</label>
                <input type="date" name="Date" id="Date" value="<% if (editing) { %><%= person.vaccineDate %><% } %>">
            </div>
            <div class="form-control">
                <label for="ECN">EC Number</label>
                <input type="number" name="ECN" id="ECN" value="<% if (editing) { %><%= person.ecNo %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" name="personId" value="<%= person.id %>">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update Person<% } else { %>Add Person<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>