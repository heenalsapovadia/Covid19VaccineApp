<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/add-person" method="POST">
            <div class="form-control">
                <label for="Name">Name</label>
                <input type="text" name="Name" id="Name">
            </div>
            <div class="form-control">
                <label for="Address">Address</label>
                <input type="text" name="Address" id="Address">
            </div>
            <div class="form-control">
                <label for="Sector">Sector</label>
                <input type="text" name="Sector" id="Sector">
            </div>
            <div class="form-control">
                <label for="Vaccine">Vaccine Name</label>
                <input type="text" name="Vaccine" id="Vaccine">
            </div>
            <div class="form-control">
                <label for="Dose">Dose</label>
                <input type="number" name="Dose" id="Dose">
            </div>
            <div class="form-control">
                <label for="Date">Vaccine Date</label>
                <input type="date" name="Date" id="Date">
            </div>
            <div class="form-control">
                <label for="ECN">EC Number</label>
                <input type="number" name="ECN" id="ECN">
            </div>
            <button class="btn" type="submit">Add Person</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>